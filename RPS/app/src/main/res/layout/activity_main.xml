<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="SCISSORS"
            android:layout_width="194dp"
            android:layout_height="0dp" android:id="@+id/button4"
            android:textSize="24sp"
            style="@style/Widget.AppCompat.Button.Colored" app:layout_constraintTop_toBottomOf="@+id/button3"
            android:layout_marginBottom="228dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:layout_width="210dp"
            android:layout_height="0dp"
            android:text="Let's Play"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.07"
            app:layout_constraintHorizontal_bias="0.674" android:textSize="30sp" android:id="@+id/textView"
            android:layout_marginTop="48dp" android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toTopOf="@+id/button"/>
    <Button
            android:text="Rock"
            android:layout_width="194dp"
            android:layout_height="0dp" android:id="@+id/button"
            android:textSize="24sp"
            style="@style/Widget.AppCompat.Button.Colored" app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginBottom="51dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/button3" app:layout_constraintStart_toStartOf="parent"
    />
    <Button
            android:text="PAPER"
            android:layout_width="194dp"
            android:layout_height="0dp" android:id="@+id/button3"
            android:textSize="24sp"
            style="@style/Widget.AppCompat.Button.Colored" app:layout_constraintTop_toBottomOf="@+id/button"
            android:layout_marginBottom="43dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/button4" app:layout_constraintStart_toStartOf="parent"/>

</android.support.constraint.ConstraintLayout>